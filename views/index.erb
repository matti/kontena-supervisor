<html>
<head>
  <% if meta_refresh_seconds %>
    <meta http-equiv="refresh" content="<%= meta_refresh_seconds %>">
  <% end %>
</head>

<body>
  <h1>kontena-supervisor</h1>
  <a href="?refresh=1">Start refreshing</a>

  <pre>
  <%= instance_number_ascii %>
  </pre>
  <h2>KONTENA_NODE_NAME: <%= ENV['KONTENA_NODE_NAME'] %></h2>

  <fieldset>
    <legend>ENV</legend>
    <pre><% ENV.each_pair do |k,v| %>
  <%= k %>=<%= v %><% end %>
    </pre>
  </fieldset>
</body>
